<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Employees</title>
  <!-- <link rel="stylesheet" href="/style.css"> -->
    <style>
      body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  padding: 20px;
}

h1 {
  text-align: center;
  color: #333;
}

.table-container {
  margin: 20px auto;
  max-width: 800px;
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

thead {
  background-color: #333;
  color: #fff;
}

thead th {
  padding: 12px;
  text-align: left;
}

tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}

tbody tr:hover {
  background-color: #f1f1f1;
}

tbody td {
  padding: 12px;
  border-bottom: 1px solid #ddd;
}

tbody td:last-child {
  text-align: center;
}

table th, table td {
  text-align: left;
}

@media (max-width: 768px) {
  .table-container {
    padding: 10px;
  }

  h1 {
    font-size: 20px;
  }

  table {
    font-size: 14px;
  }
}

    </style>
</head>
<body>
  <div class="table-container">
    <h1>Employees</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.role || 'Employee' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
